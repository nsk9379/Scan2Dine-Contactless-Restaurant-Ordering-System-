<!DOCTYPE html>
<html>
<head>
  <title>Payment</title>
  <link rel="stylesheet" href="/css/18_payment.css">
</head>
<body>
  <h2>Order Summary</h2>

  <% if (cart.length === 0) { %>
    <p>Your cart is empty.</p>
    <a href="/order?hotel_id=<%= hotel_id %>&table_no=<%= table_no %>">Back to Menu</a>
  <% } else { %>
    <table border="1">
      <tr>
        <th>Item</th>
        <th>Qty</th>
        <th>Price</th>
        <th>Subtotal</th>
      </tr>
      <% let total = 0; %>
      <% cart.forEach(item => { %>
        <% let subtotal = item.qty * item.price; total += subtotal; %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.qty %></td>
          <td>₹<%= item.price %></td>
          <td>₹<%= subtotal %></td>
        </tr>
      <% }) %>
      <tr>
        <td colspan="3"><strong>Total</strong></td>
        <td><strong>₹<%= total %></strong></td>
      </tr>
    </table>

    <h3>Select Payment Method</h3>
    <form action="/place-order" method="POST">
      <input type="hidden" name="hotel_id" value="<%= hotel_id %>">
      <input type="hidden" name="table_no" value="<%= table_no %>">
      <label>
        <input type="radio" name="payment_method" value="UPI" required> UPI
      </label><br>
      <label>
        <input type="radio" name="payment_method" value="COD" required> Cash on Delivery
      </label><br><br>
      <button type="submit">Place Order</button>
    </form>
    <br>
    <a href="/cart">Go Back to Cart</a>
  <% } %>
</body>
</html>
